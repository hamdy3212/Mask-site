<%- include("../partials/header") %>

<div class="container border new-mask mt-5" style="width: 30%;">
	<h1 class="d-flex justify-content-center my-3">Edit Mask</h1>
	<form action="/masks/<%= mask._id %>/?_method=PUT" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="mask[name]" value="<%= mask.name %>">
		</div>
		<div class="form-group">
			<input class="form-control" type="number" name="mask[price]" value="<%= mask.price %>" min="0.5" step="0.5">
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="mask[image]" value="<%= mask.image %>">
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="mask[description]" value="<%= mask.description %>">
		</div>
		<button class="btn btn-primary btn-block my-4" type="submit">Submit</button>
	</form>
</div>
<button  class="btn btn-dark"><a href="/masks">Back</a></button>

<%- include("../partials/footer") %>