<%- include("../partials/header") %>

<div class="container border new-mask mt-5" style="width: 30%;">
	<h1 class="d-flex justify-content-center my-3">Add new Mask</h1>
	<form action="/masks" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="maskname" placeholder="name">
		</div>
		<div class="form-group">
			<input class="form-control" type="number" name="price" placeholder="price" min="0.5" step="0.5">
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="image" placeholder="image url">
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="description" placeholder="description">
		</div>
		<button class="btn btn-primary btn-block my-4" type="submit">Submit</button>
	</form>
</div>
<button  class="btn btn-dark"><a href="/masks">Back</a></button>

<%- include("../partials/footer") %>